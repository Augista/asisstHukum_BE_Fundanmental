datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  OWNER
  LAWYER
  ADMIN
}

model User {
  id        Int            @id @default(autoincrement())
  email     String         @unique
  password  String
  name      String
  role      Role           @default(OWNER)
  businesses Business[]    @relation("OwnerBusinesses")
  assignedBusinesses Business[] @relation("LawyerBusinesses")
  consultations Consultation[]
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
}

model Business {
  id            Int            @id @default(autoincrement())
  name          String
  ownerId       Int?
  owner         User?          @relation("OwnerBusinesses", fields: [ownerId], references: [id], onDelete: SetNull)
  lawyerId      Int?
  lawyer        User?          @relation("LawyerBusinesses", fields: [lawyerId], references: [id], onDelete: SetNull)
  nib           String?        @unique
  permits       Permit[]
  files         File[]
  consultations Consultation[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model Permit {
  id         Int       @id @default(autoincrement())
  businessId Int
  business   Business  @relation(fields: [businessId], references: [id], onDelete: Cascade)
  filename   String
  createdAt  DateTime  @default(now())
}

model Consultation {
  id         Int       @id @default(autoincrement())
  businessId Int
  business   Business  @relation(fields: [businessId], references: [id], onDelete: Cascade)
  lawyerId   Int?
  lawyer     User?     @relation(fields: [lawyerId], references: [id], onDelete: SetNull)
  status     ConsultationStatus @default(PENDING)
  notes      String?
  resultFileId Int? @unique
  resultFile   File?   @relation("ConsultationResultFile", fields: [resultFileId], references: [id])

  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model File {
  id           Int             @id @default(autoincrement())
  businessId   Int
  business     Business        @relation(fields: [businessId], references: [id], onDelete: Cascade)
  filename     String
  url          String
  createdAt    DateTime        @default(now())
  consultation Consultation?   @relation("ConsultationResultFile")
}

enum ConsultationStatus {
  PENDING
  APPROVED
  REJECTED
}
